#include<stdio.h>
 main()
{
	int r,c,i,j,*p[10][10],a[10][10],sum=0;
	
	printf("Enter no. of rows and columns of matrix\n");
	scanf("%d%d",&r,&c);

	
	for(i=0;i<r;i++)
	{
		for(j=0;j<c;j++)
		{
			printf("Enter the value of a[%d][%d]:",i,j);
			scanf("%d",&a[i][j]);
		}
	}
		printf("Entered %dx%d matrix is:\n",r,c);
			for(i=0;i<r;i++)
	    {
		   for(j=0;j<c;j++)  
		     {
			        p[i][j]=&a[i][j];
			     	
			     	printf("%u\t",*(p[i][j]));
	         
	           
	           }
	           printf("\n");
        }
        
        
        	for(i=0;i<r;i++)
        	{
        		for(j=0;j<c;j++)
        		{
        			if(i==j)
        			{
        				sum=sum+a[i][j];
					}
        				
				}
			}
        
        	
		
		printf("The sum of digonal elemnts is: %d\n",sum);
	}
        


		
